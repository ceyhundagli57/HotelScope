@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Application.DTOs.CreateHotelDto

@{
    ViewBag.Title = "AddHotel";
    Layout = "_Layout";
}

<h2>Add Hotel</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div>
    <form asp-action="AddHotel" method="post">
        <div class="form-group">
            <label asp-for="CompanyTitle" class="control-label">Company Title</label>
            <input asp-for="CompanyTitle" class="form-control" />
            <span asp-validation-for="CompanyTitle" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Hotel</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

<hr />

<h2>Existing Hotels</h2>
<p>Use the <a asp-action="Index">hotel list</a> to see all registered hotels.</p>